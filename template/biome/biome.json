{
  "$schema": "https://biomejs.dev",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNamingConvention": "off",
        "useConsistentArrayType": "error",
        "useSingleVarDeclarator": "error",
        "useConst": "error"
      },
      "complexity": {
        "noUnusedVariables": "off"
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "error",
          "options": {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_"
          }
        },
        "noExplicitAny": "warn"
      },
      "typescript": {
        "useConsistentTypeImports": "error",
        "useConsistentTypeDefinitions": {
          "level": "error",
          "options": {
            "syntax": "interface"
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "quoteProperties": "asNeeded"
    }
  },
  "files": {
    "ignore": [
      "build/**",
      "coverage/**",
      "dist/**",
      "dist-ssr/**",
      "platforms/**",
      "src-tauri/**",
      "node_modules/**",
      "*.md",
      "*.json",
      "*.min.js",
      "package-lock.json",
      "yarn.lock"
    ]
  },
  "overrides": [
    {
      "include": ["**/*.case.ts", "**/*.test.ts", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noExplicitAny": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
